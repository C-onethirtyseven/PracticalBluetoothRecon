<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/whitelistRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/whitelistTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Whitelist Devices"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/whitelistHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap a device to remove it from the whitelist."
        android:layout_marginTop="6dp"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/whitelistList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:dividerHeight="1dp" />

    <TextView
        android:id="@+id/whitelistEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No whitelisted devices."
        android:gravity="center"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginTop="12dp" />
</LinearLayout>
