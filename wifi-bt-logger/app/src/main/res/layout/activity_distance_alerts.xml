<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/distanceRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/distanceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Co Travelers"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/distanceHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Devices seen multiple times grouped by distance range."
        android:layout_marginTop="6dp"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/distanceList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:dividerHeight="1dp" />

    <TextView
        android:id="@+id/distanceEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No distance alerts found."
        android:gravity="center"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginTop="12dp" />
</LinearLayout>
